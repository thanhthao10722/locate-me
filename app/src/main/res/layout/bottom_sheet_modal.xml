<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/chat"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/btn_chat_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_chat"
                android:layout_marginLeft="20dp"
                android:text="Chat"
                android:background="@drawable/button_background"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_suggest"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/suggest_icon"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/btn_add_friend"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_suggest"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_background"
                android:text="Friend Suggestion"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/map_icon"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/btn_map"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_map"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_background"
                android:text="Map"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_update"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home_icon"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_update"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_background"
                android:text="Update Profile"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/exit_icon"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/btn_signout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_logout"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_background"
                android:text="LOG out"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>