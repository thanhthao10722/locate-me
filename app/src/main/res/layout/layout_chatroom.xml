<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/taskBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="@color/background_material_light">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/add_friend_to_chatroom"
            android:src="@drawable/add_friend_1"
            android:layout_alignParentLeft="true"
            android:foregroundGravity="center"
            android:text="Add friend"
            android:backgroundTint="@color/mainBackground"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/txt_friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Name"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/btn_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/share"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/container"
        android:layout_below="@+id/taskBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:backgroundTint="@color/mainBackground">

        <EditText
            android:id="@+id/msg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btn_chat_send"
            android:layout_weight="0.7"
            android:hint="Input message" />

        <Button
            android:id="@+id/btn_chat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/mainBackground"
            android:text="Send"
            android:textColor="@color/background_material_dark" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/msg_type"
            android:layout_marginTop="10dp"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"
            android:divider="@null" />

    </RelativeLayout>
</LinearLayout>
