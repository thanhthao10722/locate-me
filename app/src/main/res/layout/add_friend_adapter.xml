<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_view"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"></ImageView>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_view"
            android:text="Username"
            android:textColor="#1A1A16"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img_view"
            android:text="Phone number"
            android:textSize="17dp"></TextView>


       <Button
           android:layout_width="60dp"
           android:layout_height="30dp"
           android:id="@+id/btn_accept"
           android:layout_toLeftOf="@+id/btn_decline"
           android:layout_marginTop="20dp"
           android:fontFamily="sans-serif"
           android:text="Accept"
           android:textSize="9dp"
           android:layout_marginRight="7dp"
           android:background="@drawable/background_rectangle"
           android:backgroundTint="@color/mainBackground"
           android:onClick="acceptFriend"
           android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_decline"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="Decline"
            android:textSize="9dp"
            android:background="@drawable/background_rectangle"
            android:backgroundTint="#DBDBE2"
            android:layout_marginRight="2dp"
            android:onClick="declineFriend"
            android:textStyle="bold"
            />


</RelativeLayout>